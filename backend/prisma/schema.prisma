// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TherapyMetric {
  id           String   @id @default(uuid())
  childId      String   
  exerciseType String   // e.g., "Mouth Opening", "Vocalization"
  duration     Float?   // Sustained time in seconds
  intensity    Float?   // Volume/RMS
  accuracy     Float?   // Or any other metric depending on the game
  date         DateTime @default(now())
}
